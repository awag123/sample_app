<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <%= render 'shared/stats_and_user_info' %>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>